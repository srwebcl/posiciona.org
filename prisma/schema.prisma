generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String
  variant   String
  interest  String
  message   String?  @db.Text
  rut       String?
  company   String?
  role      String?
  status    String   @default("NUEVO")
  notes     String?  @db.Text
  createdAt DateTime @default(now())
}
